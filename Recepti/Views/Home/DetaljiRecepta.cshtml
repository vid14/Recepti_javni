@model Recepti.Models.ViewModel.DetaljiReceptaVm

@{
    ViewBag.Title = "Detalji recepta";
}

<h2>@Html.DisplayFor(model => model.ImeRecepta)</h2>

<br/>
<h5>Sastojci:</h5>
<div>
    @foreach (var item in @Model.Sastojci)
    {
        <div class="row">
            @Html.DisplayFor(model => item.Ime): @Html.DisplayFor(model => item.Kolicina) @Html.DisplayFor(model=>item.MjernaJedinica)   
        </div>
    }  
</div>

<hr/>

<h5>Opis:</h5>
<div class="row">
    @Html.Raw(Model.OpisRecepta)
</div>

<br/>
<br/>

@if (!string.IsNullOrEmpty(Model.NapomenaRecepta))
{
    <h5>Napomena:</h5>
    <div class="row">
        @Html.Raw(Model.NapomenaRecepta)
    </div>
}
<br/>
<div class="row">
    Kategorije: @Html.DisplayFor(model=>model.KategorijeRecepta)
</div>

<hr/>

@foreach (var item in  @Model.SlikaRecepta)
{
    <div class="row">
        <div class="col-md-3"></div>
        <div class="col-md-6">
            <div class="img-thumbnail">
                <img width="100%" src="data:image;base64,@item" alt="slika_recepta"/>
            </div>
        </div>
        <div class="col-md-3"></div>
    </div>
    <br/>
}

<div>
    <a asp-action="Index" class="btn btn-primary">Nazad</a>
    <a asp-action="UrediRecept" asp-route-idRecepta="@Model.IdRecepta" class="btn btn-primary">Promjena</a>
</div>

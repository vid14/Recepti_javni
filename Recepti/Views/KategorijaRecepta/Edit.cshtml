@model Recepti.Models.ReceptiBaza.KategorijaRecepta

@{
    ViewData["Title"] = "Edit";
}

<h1>Uredi</h1>

<h4>Kategorija recepta</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="KategorijaId" />
            <div class="form-group">
                <label asp-for="KategorijaIme" class="control-label"></label>
                <input asp-for="KategorijaIme" class="form-control" />
                <span asp-validation-for="KategorijaIme" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Spremi" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Nazad</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
